---
const { platform, username } = Astro.props;

// 平台 → Iconify 图标 映射
const iconMap = {
  twitter: "fa6-brands:twitter",
  github: "fa6-brands:github",
  youtube: "fa6-brands:youtube",
};

const icon = iconMap[platform];
const url = `https://www.${platform}.com/${username}`;
---

<a
  href={url}
  target="_blank"
  rel="noopener noreferrer"
  class="social-btn"
  aria-label={platform}
>
  <span class="iconify" data-icon={icon} data-width="20" data-height="20"
  ></span>
</a>

<style>
  .social-btn {
    width: 44px;
    height: 44px;
    border-radius: 9999px;
    display: flex;
    align-items: center;
    justify-content: center;

    background: transparent;
    border: 1px solid #e5e7eb;
    color: #555;

    transition: all 0.25s ease;
  }

  .social-btn:hover {
    color: #000;
    border-color: #000;
    transform: translateY(-2px) scale(1.05);
  }
</style>

<!-- ✅ 只需要在任意一个 layout 或 Footer 里引入一次 -->
<script src="https://code.iconify.design/3/3.1.1/iconify.min.js"></script>
